---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { PROJECT_TAGS } from '../../data/projectTags';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full max-w-6xl px-4 py-12">
			<section class="space-y-10">
				<div class="flex flex-wrap items-end justify-between gap-4">
					<div>
						<h1 class="text-3xl font-semibold text-ink sm:text-4xl">블로그</h1>
						<p class="text-muted">기술을 배우고, 함께 협업하며, 조금씩 성장해가는 순간들을
						기록합니다.
						</p>
					</div>
					<p class="text-sm text-muted">
						총 <span class="font-semibold text-ink">{posts.length}</span>개의 포스트
					</p>
				</div>
				{posts.length ? (
					<ul class="grid list-none gap-6 p-0 md:grid-cols-2">
						{posts.map((post, index) => (
							<li
								class:list={[
									'group relative flex rounded-3xl border border-muted-light bg-white/95 shadow-sm transition-transform duration-200 hover:-translate-y-1 hover:shadow-lg',
									index === 0 && 'md:col-span-2',
								]}
							>
								<a
									class:list={[
										'flex h-full flex-col overflow-hidden rounded-3xl no-underline transition-colors duration-200 group-hover:bg-white',
										index === 0 ? 'md:flex-row md:items-stretch md:gap-8' : '',
									]}
									href={`/blog/${post.id}/`}
								>
									<div
										class:list={[
											'relative',
											index === 0 ? 'md:h-full md:w-1/2' : 'h-52 sm:h-60',
										]}
										aria-hidden="true"
									>
										{post.data.heroImage ? (
											<Image
												class:list={[
													'h-full w-full object-cover transition-transform duration-200 group-hover:scale-[1.03]',
													index === 0 ? 'md:h-full' : '',
												]}
												width={index === 0 ? 1020 : 720}
												height={index === 0 ? 510 : 360}
												src={post.data.heroImage}
												alt=""
											/>
										) : (
											<div
												class="flex h-full w-full items-center justify-center bg-muted-light text-lg font-semibold uppercase tracking-[0.2em] text-muted"
											>
												IBAS DEV
											</div>
										)}
									</div>
									<div
										class:list={[
											'flex flex-1 flex-col gap-3 px-6 pb-6 pt-6',
											index === 0 ? 'md:px-0 md:pr-10' : '',
										]}
									>
										<div class="flex flex-wrap items-center gap-2 text-xs uppercase tracking-[0.25em] text-muted">
											<span class="inline-flex items-center gap-2 rounded-full border border-muted-light px-3 py-1 text-[0.7rem] font-semibold">
												<FormattedDate date={post.data.pubDate} />
											</span>
											{post.data.tags?.length ? (
												post.data.tags.slice(0, 2).map((tagId) => {
													const tag = PROJECT_TAGS.find((item) => item.id === tagId);
													return tag ? (
														<span
															class="inline-flex items-center gap-1 rounded-full bg-accent/10 px-3 py-1 text-[0.7rem] font-semibold lowercase tracking-[0.2em] text-accent"
															aria-label={`프로젝트 태그 ${tag.label}`}
														>
															{tag.label}
														</span>
													) : null;
												})
											) : (
												<span class="inline-flex items-center gap-1 rounded-full bg-muted-light/70 px-3 py-1 text-[0.7rem] font-semibold lowercase tracking-[0.2em] text-muted">
													misc
												</span>
											)}
										</div>
										<h2
											class:list={[
												'text-2xl font-semibold text-ink sm:text-3xl',
												index === 0 ? 'md:text-[2.25rem]' : '',
											]}
										>
											{post.data.title}
										</h2>
										<p class="text-base text-muted">
											{post.data.description ?? '이 글에 대한 설명이 곧 업데이트됩니다.'}
										</p>
										<span class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-accent">
											더 알아보기 →
										</span>
									</div>
								</a>
							</li>
						))}
					</ul>
				) : (
					<p class="rounded-2xl border border-dashed border-muted-light bg-white/40 p-6 text-center text-muted">
						작성된 글이 아직 없습니다. 곧 새로운 글로 찾아뵐게요!
					</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
